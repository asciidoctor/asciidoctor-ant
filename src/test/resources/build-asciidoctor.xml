<project default="asciidoctor">

    <target name="asciidoctor-def">
        <taskdef name="asciidoctor" classname="org.asciidoctor.ant.AsciidoctorAntTask"/>
    </target>

    <target name="asciidoctor" depends="asciidoctor-def">
        <asciidoctor baseDir="${baseDir}"
                     sourceDirectory="${sourceDirectory}"
                     sourceDocumentName="${sourceDocumentName}"
                     outputDirectory="${outputDirectory}"
                     backend="${backend}"/>
    </target>

    <target name="asciidoctor-txt" depends="asciidoctor-def">
        <asciidoctor baseDir="${baseDir}"
                     sourceDirectory="${sourceDirectory}"
                     outputDirectory="${outputDirectory}"
                     backend="${backend}"
                     extensions="txt">
        </asciidoctor>
    </target>

</project>