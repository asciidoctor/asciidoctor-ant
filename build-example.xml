<project default="use">

    <property name="version" value="0.1.4"/>

    <target name="asciidoctor-def">
        <taskdef name="asciidoctor" classname="org.asciidoctor.ant.AsciidoctorAntTask" classpath="target/asciidoctor-ant-${version}.jar"/>
    </target>

    <target name="readme" depends="asciidoctor-def">
        <asciidoctor sourceDirectory="${basedir}" outputDirectory="target"/>
    </target>

    <target name="use" depends="asciidoctor-def">
        <asciidoctor sourceDirectory="src/test/resources" outputDirectory="target"/>
    </target>

    <target name="use-full" depends="asciidoctor-def">
        <asciidoctor sourceDirectory="src/test/resources" outputDirectory="target"
                     sourceDocumentName="test.asciidoc"
                     backend="html5"
                     imagesDir="images"
                     doctype="articles"
                     headerFooter="true"
                     compact="true"
                     sourceHighlighter="highlightjs"
                     embedAssets="false"
                     eruby="">
                <attribute key="title" value="Test"/>
        </asciidoctor>
    </target>

</project>